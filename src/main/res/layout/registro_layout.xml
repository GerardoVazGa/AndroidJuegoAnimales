<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_registro">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="144dp"
        android:layout_height="194dp"
        android:layout_marginTop="4dp"
        android:contentDescription="Logo del juego"
        android:scaleType="fitXY"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

   <LinearLayout
       android:id="@+id/registro"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:padding="15dp"
       app:layout_constraintTop_toBottomOf="@+id/logo">
       <EditText
           android:id="@+id/usuario"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginStart="16dp"
           android:layout_marginTop="16dp"
           android:layout_marginEnd="16dp"
           android:padding="20dp"
           android:hint="USUARIO"
           android:textAlignment="center"
           android:inputType="textEmailAddress"
           android:background="@drawable/edittext_design"/>

       <EditText
           android:id="@+id/password"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginStart="16dp"
           android:layout_marginTop="16dp"
           android:layout_marginEnd="16dp"
           android:padding="20dp"
           android:hint="CONTRASEÑA"
           android:textAlignment="center"
           android:inputType="textPassword"
           android:background="@drawable/edittext_design"/>

       <Button
           android:id="@+id/registerButton"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:layout_marginStart="16dp"
           android:layout_marginTop="16dp"
           android:layout_marginEnd="16dp"
           android:backgroundTint="#A13fB0"
           android:drawableRight="@drawable/baseline_arrow_circle_right_24"
           android:padding="20dp"
           android:textSize="15dp"
           android:text="Registrarse"
           android:textColor="@color/white" />

       <Button
           android:id="@+id/btnIniciarSesion"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:layout_marginStart="16dp"
           android:layout_marginTop="16dp"
           android:layout_marginEnd="16dp"
           android:backgroundTint="#A13fB0"
           android:padding="20dp"
           android:textSize="15dp"
           android:drawableRight="@drawable/baseline_done_24"
           android:text="Iniciar Sesión"
           android:textColor="@color/white" />

   </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>